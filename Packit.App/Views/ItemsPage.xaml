<Page
    x:Class="Packit.App.Views.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Packit.Model"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0" x:Name="lvItems" ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Item">
                        <StackPanel Orientation="Vertical" Margin="15">
                            <StackPanel Spacing="10" Orientation="Horizontal">
                                <TextBlock
                                FontSize="50"
                                Text="{x:Bind Title}"
                                Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ListView Grid.Column="1" x:Name="lvImages" ItemsSource="{x:Bind ViewModel.Images, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="BitmapImage">
                        <Image Width="50"
                            Height="50"
                            Source="{x:Bind }"
                            Stretch="UniformToFill" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
