<Page
    x:Class="Packit.App.Views.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    xmlns:Controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Loaded="ItemPage_Loaded">

    <Page.Resources>
        <DataTemplate x:Key="items">
            <Grid Background="White" BorderBrush="Black" BorderThickness="1" Width="300">
                <Image Source="{Binding IName}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">

        <Grid Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" TextWrapping="Wrap" PlaceholderText="Search" Margin="10,10,10,10"/>

            <Controls:AdaptiveGridView x:Name="ItemsAdaptive1" Grid.Row="1"/>

            <Grid Grid.Row="2" ColumnSpacing="5" Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                

                <Button Click="AddButton_Click" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <SymbolIcon Symbol="Add"/>
                </Button>
                <Button Click="AddButton_Click" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <SymbolIcon Symbol="Edit"/>
                </Button>
                <Button Click="AddButton_Click" Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <SymbolIcon Symbol="Delete"/>
                </Button>
            </Grid>
            
            
        </Grid>
    </Grid>
</Page>
