<Page
    x:Class="Packit.App.Views.RegisterUserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <StackPanel MaxWidth="400" Margin="0,70,0,0">
                <TextBlock Text="Register" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
                <TextBox Header="First name" FontSize="20" Margin="0,5,0,0"/>
                <TextBox Header="Last name" FontSize="20" Margin="0,5,0,0"/>
                <TextBox Header="E-mail" FontSize="20" Margin="0,5,0,0"/>
                <PasswordBox Header="Password" FontSize="20" Margin="0,5,0,0"/>
                <PasswordBox Header="Repeat password" FontSize="20" Margin="0,5,0,0"/>
                <Button Content="Register" Margin="0,10,0,0"/>
                <Button Background="Transparent" Padding="0,0,0,0" Margin="0,20,0,0" >
                    <TextBlock Text="Already registered? Click here!" TextDecorations="Underline"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
